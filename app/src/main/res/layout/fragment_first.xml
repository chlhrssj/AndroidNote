<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_apt"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="@string/apt"/>

        <Button
            android:id="@+id/btn_aidl"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="@string/aidl"/>

        <Button
            android:id="@+id/btn_aop"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="@string/aop"/>

        <Button
            android:id="@+id/btn_plugin"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:text="@string/plugin"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>